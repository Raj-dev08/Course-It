pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello from Jenkins Pipeline!'
                echo 'how are you fellas ?'
            }
        }
        stage('Install'){
            steps {
               dir('backend') {
                    echo 'Installing dependencies for backend...'
                    bat 'npm install'
                }
                dir('frontend') {
                    echo 'Installing dependencies for frontend...'
                    bat 'npm install'
                }
            }
        }
        stage('Run Frontend') {
            when {
                expression { env.NODE_ENV == 'development' }
            }
            steps {
                dir('frontend') {
                    echo 'Building frontend...'
                     bat 'start /B npm run dev' // Run frontend in the background
                }
            }
        }
        stage('Run Backend') {
            when {
                expression { env.NODE_ENV == 'development' }
            }
            steps {
                dir('backend') {
                    echo 'Starting backend server...'
                    bat 'docker compose down'
                    bat 'docker compose up -d'
                }
            }
        }
    }
}